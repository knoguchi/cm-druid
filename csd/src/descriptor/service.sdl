              "druid_processing_buffer_sizeBytes",
              "druid_processing_numThreads",
              "druid_indexer_runner_javaOptsArray",
              "druid_worker_capacity"
            ],
            "additionalConfigs": [
              {
                "key": "druid.service",
                "value": "druid/middlemanager"
              }
            ],
            "configFormat": "properties"
          }
