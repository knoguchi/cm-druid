    {
      "name": "DRUID_MIDDLE_MANAGER",
      "label": "Druid Middle Manager",
      "pluralLabel": "Druid Middle Managers",
      "jvmBased": true,
      "startRunner": {
        "program": "scripts/control.sh",
        "args": [
          "middleManager",
          "start"
